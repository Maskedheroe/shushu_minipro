/* components/playlist/playlist.wxss */
.booklist-container {
  position: relative;
  width: 300rpx;
  height: 400rpx;
  padding: 20rpx;
  margin: 10rpx 0 10rpx 16rpx;
  background: #fff;
  border-radius: 18rpx;
}

.booklist-img {
  width: 100%;
  height: 240rpx;
  border-radius: 6rpx;
  /* wxapp中 url不能是网络图片  */
}


.name {
  display: inline-block;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 26rpx;
  line-height: 1.2;
  padding-top: 4rpx;
}

.view-count {
  position: relative;
  top: 8px;
  left: 100px;
  padding-bottom: 4px;
  color:gray;
  font-size: 10px;
}
.tags {
  display: flex;
}
.old {
  margin-right: 30rpx;
}
.info {
  width: 100%;
  height: 100rpx;
}

.avatar {
  float: left;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-top: 20rpx;
}
.user-name {
  display: inline-block;
  width: 30rpx;
  font-size: 24rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
}
.price {
  float: right;
  font-size: 28rpx;
  margin-right: -10rpx;
}