/* components/tradeCard/tradeCard.wxss */
page {
  background-color: #f1f1f1;
}

.trade {
  padding: 20rpx;
  background-color: #fff;
}

.trade-title {
  display: flex;
}

.trade-box {
  flex: 1;
}

.trade-time {
  font-style: 24rpx;
  color: #939393;
}

.trade-content {
  margin: 20rpx 0;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
}

.trade-portrait {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
