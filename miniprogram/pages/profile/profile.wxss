/* pages/profile/profile.wxss */
page {
  background-color: #f1f1f1
}
.profile-header {
  position: relative;
  background-size: cover;
  height: 480rpx;
  display: flex;
  justify-content: center;
  font-display: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 30rpx;
  overflow: hidden;
}
.name {
  position: absolute;
  color: #111;
  bottom: 60rpx;
}
.nav-item {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.content {
  width: 200rpx;
  height: 160rpx;
  border: gray solid 3rpx;
}